rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own transactions using Clerk user ID
    match /transactions/{transactionId} {
      // For development: Allow all access (we'll secure this with Clerk user ID in the app)
      allow read, write: if true;
      
      // TODO: For production, implement one of these approaches:
      // Option 1: Use custom claims (requires backend)
      // allow read, write: if request.auth != null && request.auth.token.clerk_user_id == resource.data.userId;
      
      // Option 2: Use Firebase Auth with Clerk (requires additional setup)
      // allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
